<%= form_for(@articles, html: {multipart: true}) do |f| %>
  <ul>
    <% @articles.errors.full_messages.each do |error| %>
      <li> <%= error %> </li>
    <% end %>
  </ul>

  <p>
    <%= f.label :title %> <br />
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :body %> <br />
    <%= f.text_area :body %>
  </p>

  <p>
    <%= f.label :tag_list %> <br />
    <%= f.text_field :tag_list %>
  </p>

  <p>
    <% if @articles.image.exists? %>
      <%= image_tag @articles.image.url %><br />
    <% end %>
    <%= f.label :image, "Attach an Image" %> <br />
    <%= f.file_field :image %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>
